<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.dashboard.driver.AddDriverActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_addDriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:title="New Driver"
        android:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_addDriver">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <cz.ackee.ui.textfield.TextInputLayout

                android:id="@+id/ti_addDriverActivity_plate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/plate"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="#F1F0F0"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1dp"
                app:hintEnabled="true"
                app:hintPaddingTop="12dp"
                app:hintTextColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                >
                <cz.ackee.ui.textfield.TextInputEditText
                    android:id="@+id/et_addDriverActivity_plate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingStart="16dp"
                    android:paddingTop="28dp"
                    android:paddingBottom="16dp"
                    android:singleLine="true"
                    android:textColor="@color/black" />
            </cz.ackee.ui.textfield.TextInputLayout>

            <cz.ackee.ui.textfield.TextInputLayout

                android:id="@+id/ti_addDriverActivity_driverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/driver_name"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="#F1F0F0"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1dp"
                app:hintEnabled="true"
                app:hintPaddingTop="12dp"
                app:hintTextColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/ti_addDriverActivity_plate"

                >

                <cz.ackee.ui.textfield.TextInputEditText
                    android:id="@+id/et_addDriverActivity_driverName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingStart="16dp"
                    android:paddingTop="28dp"
                    android:paddingBottom="16dp"
                    android:singleLine="true"
                    android:textColor="@color/black" />
            </cz.ackee.ui.textfield.TextInputLayout>

            <cz.ackee.ui.textfield.TextInputLayout

                android:id="@+id/ti_addDriverActivity_licenseStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/license_start"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="#F1F0F0"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1dp"
                app:hintEnabled="true"
                app:hintPaddingTop="12dp"
                app:hintTextColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/ti_addDriverActivity_driverName"

                >

                <cz.ackee.ui.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:editable="false"
                    android:id="@+id/et_addDriverActivity_licenseStart"
                    android:paddingStart="16dp"
                    android:paddingTop="28dp"
                    android:paddingBottom="16dp"
                    android:singleLine="true"
                    android:textColor="@color/black" />
            </cz.ackee.ui.textfield.TextInputLayout>

            <cz.ackee.ui.textfield.TextInputLayout

                android:id="@+id/ti_addDriverActivity_licenseEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/license_end"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="#F1F0F0"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1dp"
                app:hintEnabled="true"
                app:hintPaddingTop="12dp"
                app:hintTextColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/ti_addDriverActivity_licenseStart"

                >

                <cz.ackee.ui.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingStart="16dp"
                    android:editable="false"
                    android:id="@+id/et_addDriverActivity_licenseEnd"
                    android:paddingTop="28dp"
                    android:paddingBottom="16dp"
                    android:singleLine="true"
                    android:textColor="@color/black" />
            </cz.ackee.ui.textfield.TextInputLayout>


            <cz.ackee.ui.textfield.TextInputLayout

                android:id="@+id/ti_addDriverActivity_currentMiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/current_miles_age"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="#F1F0F0"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="1dp"
                app:hintEnabled="true"
                app:hintPaddingTop="12dp"
                app:hintTextColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/ti_addDriverActivity_licenseEnd"

                >

                <cz.ackee.ui.textfield.TextInputEditText
                    android:id="@+id/et_addDriverActivity_currentMiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingStart="16dp"
                    android:paddingTop="28dp"
                    android:inputType="number"
                    android:paddingBottom="16dp"
                    android:singleLine="true"
                    android:textColor="@color/black" />
            </cz.ackee.ui.textfield.TextInputLayout>

               <life.sabujak.roundedbutton.RoundedButton
                app:layout_constraintTop_toBottomOf="@+id/ti_addDriverActivity_currentMiles"
                android:id="@+id/btn_addDriverActivity_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:gravity="center"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="20dp"
                   android:text="@string/save"
                   android:textColor="@color/white"
                   app:buttonCornerRadius="@dimen/_20sdp"
                   app:buttonGradientEndColor="@color/teal_200"
                   app:buttonGradientStartColor="@color/primary"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                app:layout_constraintTop_toBottomOf="@+id/btn_addDriverActivity_save"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
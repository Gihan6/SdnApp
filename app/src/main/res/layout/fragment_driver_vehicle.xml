<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.dashboard.driverVehicle.DriverVehicleFragment">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_driverVehicle_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="@dimen/_8sdp"
        android:hint="@string/search"
        android:background="@drawable/background_search"
        android:textColor="@color/black"
        android:padding="@dimen/_8sdp"
        android:textColorHint="@color/primary_dark"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_8sdp"
        android:id="@+id/rv_driverVehicle_driverVehicle"
        app:layout_constraintTop_toBottomOf="@+id/et_driverVehicle_search" />
</androidx.constraintlayout.widget.ConstraintLayout>